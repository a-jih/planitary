{{#> layouts/app page-title="Groups" sub=name back-page="groups"}}

	{{#*inline "head-block"}}
	<link rel="stylesheet" type="text/css" href="/css/groups.css">
	<link rel="stylesheet" type="text/css" href="/css/events.css">
	{{/inline}}

	{{#*inline "main-block"}}
		<div class="content-card">
			<header>
				<h3>Suggested Plans</h3>
			</header>
			<div>
				{{#if_in id (lookup user "groups")}}
					{{> includes/group-plans gid=id}}
				{{else}}
					<div style="padding:1rem">
						<span style="font-style:italic;color:#666">Not a member</span> ðŸ˜­
					</div>
				{{/if_in}}
			</div>
		</div>

		<div class="content-card">
			<header>
				<h3>Events</h3>
			</header>
			<div class="content-card-body">
				{{#if events.length}}
					{{#each events}}
						{{> includes/group-events groupname=../name}}
					{{/each}}
				{{else}}
					<span style="font-style:italic;color:#666">No group events planned</span> ðŸ˜¥
				{{/if}}
			</div>
		</div>

		<div class="content-card">
			<header>
				<h3>Members</h3>
			</header>
			<div class="content-card-body memberlist">
				{{#each memberinfo}}
					<p>{{firstname}} {{lastname}}</p>
				{{/each}}
			</div>
		</div>

		<div class="content-card">
			<div class="content-card-body">
				{{#if_in id (lookup user "groups")}}
				<a class="btn btn-block btn-secondary" href="/joingroup/{{id}}">Leave Group</a>
				{{else}}
				<a class="btn btn-block btn-primary" href="/joingroup/{{id}}">Join Group</a>
				{{/if_in}}
			</div>
		</div>

	{{/inline}}

{{/layouts/app}}