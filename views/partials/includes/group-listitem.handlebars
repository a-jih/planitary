<div class="grplist-item">
	<header>
		<a class="grplist-link" href="/groups/{{id}}">
			<h3>{{name}}</h3>
			<i data-feather="arrow-right"></i>
		</a>
	</header>
	<div>
		{{#if_in id (lookup (lookup root.users root.current_user) 'groups')}}
		Joined<i style="stroke:green" data-feather="check"></i>
		{{else}}
		Not a member
		{{/if_in}}
	</div>
</div>